<!DOCTYPE html>
<html>

<head>
    <title>YelpCamp</title>
    <link rel="stylesheet" href="/main.css">
    <script src="https://kit.fontawesome.com/fadb5bc4c2.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">

</head>

<body>

    <nav>
        <div class="nav-title">
            <a href="/">YelpCamp</a>
        </div>
        <ul class="nav-body">
            <div class="nav-body-left">
                <li><a href="/campgrounds"><i class="fas fa-home"></i> Home</a></li>
                <li><a href="#"><i class="fas fa-info-circle"></i> About</a></li>
            </div>
            <div class="nav-body-right">
                <% if(!currentUser){ %>
                    <li><a href="/login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                    <li><a href="/register"><i class="fas fa-user-plus"></i> Sign Up</a></li>
                <% } else{ %>
                    <li><a href="/user/<%= currentUser._id %>"><i class="fas fa-user"></i> <%= currentUser.username %></a></li>
                    <li><a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                <% } %>
            </div>
        </ul>
        <div class="humberger-menu">
            <div class="hum-border"></div>
            <div class="hum-border"></div>
            <div class="hum-border"></div>
        </div>
    </nav>

    <% if(success != "") { %>
    <p class="msg-out"><%= success %>!!</p>
    <% }%>

    <% if(errors != "") { %>
    <p class="msg"><%= errors %>!!</p>
    <% }%>